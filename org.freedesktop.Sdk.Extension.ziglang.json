{
    "id": "org.freedesktop.Sdk.Extension.ziglang",
    "branch": "19.08",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "build-extension": true,
    "separate-locales": false,
    "appstream-compose": false,
    "build-options": {
        "prefix": "/usr/lib/sdk/ziglang"
    },
    "modules": [
        {
            "name": "zig",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /usr/lib/sdk/ziglang",
                "cp -r ./* /usr/lib/sdk/ziglang",
                "chmod a+x /usr/lib/sdk/ziglang/zig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ziglang.org/download/0.7.0/zig-linux-x86_64-0.7.0.tar.xz",
                    "sha256": "e619b1c6094c095b932767f527aee2507f847ea981513ff8a08aab0fd730e0ac",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://ziglang.org/download/0.7.0/zig-linux-aarch64-0.7.0.tar.xz",
                    "sha256": "f89933bac87d44be82325754ff88423020c81c7032a6fc41cfeb81e982eeab9b",
                    "only-arches": [
                        "aarch64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://ziglang.org/download/0.7.0/zig-linux-armv7a-0.7.0.tar.xz",
                    "sha256": "011c267e25a96ee160505a560c441daa045359a9d50e13ab1bada9d75c95db2d",
                    "only-arches": [
                        "arm"
                    ]
                }
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "build-commands": [
                "cp enable.sh /usr/lib/sdk/ziglang"
            ],
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/ziglang"
                    ],
                    "dest-filename": "enable.sh"
                }
            ]
        },
        {
            "name": "metainfo",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/metainfo",
                "cp org.freedesktop.Sdk.Extension.ziglang.metainfo.xml ${FLATPAK_DEST}/share/metainfo",
                "appstream-compose  --basename=org.freedesktop.Sdk.Extension.ziglang --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.ziglang"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.ziglang.metainfo.xml"
                }
            ]
        }
    ]
}
