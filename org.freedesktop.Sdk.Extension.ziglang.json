{
    "id": "org.freedesktop.Sdk.Extension.ziglang",
    "branch": "19.08",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "build-extension": true,
    "separate-locales": false,
    "appstream-compose": false,
    "build-options": {
        "prefix": "/usr/lib/sdk/ziglang"
    },
    "modules": [
        {
            "name": "zig",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /usr/lib/sdk/ziglang",
                "cp -r ./* /usr/lib/sdk/ziglang",
                "chmod a+x /usr/lib/sdk/ziglang/zig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ziglang.org/download/0.8.0/zig-linux-x86_64-0.8.0.tar.xz",
                    "sha256": "502625d3da3ae595c5f44a809a87714320b7a40e6dff4a895b5fa7df3391d01e",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://ziglang.org/download/0.8.0/zig-linux-aarch64-0.8.0.tar.xz",
                    "sha256": "ee204ca2c2037952cf3f8b10c609373a08a291efa4af7b3c73be0f2b27720470",
                    "only-arches": [
                        "aarch64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://ziglang.org/download/0.8.0/zig-linux-armv7a-0.8.0.tar.xz",
                    "sha256": "d00b8bd97b79f45d6f5da956983bafeaa082e6c2ae8c6e1c6d4faa22fa29b320",
                    "only-arches": [
                        "arm"
                    ]
                }
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "build-commands": [
                "cp enable.sh /usr/lib/sdk/ziglang"
            ],
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/ziglang"
                    ],
                    "dest-filename": "enable.sh"
                }
            ]
        },
        {
            "name": "metainfo",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/metainfo",
                "cp org.freedesktop.Sdk.Extension.ziglang.metainfo.xml ${FLATPAK_DEST}/share/metainfo",
                "appstream-compose  --basename=org.freedesktop.Sdk.Extension.ziglang --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.ziglang"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.ziglang.metainfo.xml"
                }
            ]
        }
    ]
}
